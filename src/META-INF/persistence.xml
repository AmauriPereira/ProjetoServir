    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>br.com.servirjanuaria.amauri.domainModel.Aluno</class>
    <class>br.com.servirjanuaria.amauri.domainModel.Aluno_has_ProgramaSocial</class>
    <class>br.com.servirjanuaria.amauri.domainModel.Bairro</class>
    <class>br.com.servirjanuaria.amauri.domainModel.CertidaoNascimento</class>
    <class>br.com.servirjanuaria.amauri.domainModel.Deficiencia</class>
    <class>br.com.servirjanuaria.amauri.domainModel.Deficiencia_has_Aluno</class>
    <class>br.com.servirjanuaria.amauri.domainModel.Endereco</class>
    <class>br.com.servirjanuaria.amauri.domainModel.Informacoes</class>
    <class>br.com.servirjanuaria.amauri.domainModel.Mae</class>
    <class>br.com.servirjanuaria.amauri.domainModel.Matricula</class>
    <class>br.com.servirjanuaria.amauri.domainModel.Pai</class>
    <class>br.com.servirjanuaria.amauri.domainModel.Pessoa</class>
    <class>br.com.servirjanuaria.amauri.domainModel.ProgramaSocial</class>
    <class>br.com.servirjanuaria.amauri.domainModel.UnidadeEscolar</class>
    <class>br.com.servirjanuaria.amauri.domainModel.Usuario</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/servir?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
